<%= link_to new_article_path,  class: 'btn btn-primary' do %><i class="glyphicon glyphicon-edit">Add New Article</i> <% end %>
<table class="table table-striped table-bordered">
<% @article.each do |article| %>
<tr>
	<td>
		<h3>
			<%= article.title %>
		</h3>
		<p>
			<%= article.content.truncate(20) %>
			<%= link_to 'Read More', article_path(article.id) %>
		</p>
		<h4>
			Status : <%= article.status %>
		</h4>
		<span>
			<%= link_to 'Edit Article', edit_article_path(article.id), class:'btn btn-primary' %>
		</span>
		<span>
			|
		</span>
		<span>
			<%= link_to 'Delete', article_path(article.id), method:"DELETE", class: 'btn btn-danger', data:{confirm:'Delete This Data?'} %>
		</span>
	</td>
</tr>
<% end %>
</table>
